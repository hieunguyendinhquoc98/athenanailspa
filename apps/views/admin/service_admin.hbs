<main class="main-content bgc-grey-100">
    <div id="mainContent">
        <div class="container-fluid">
            <h1 class="table-header text-center">Manage Services</h1>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Services table</h6>
                    <a href="/admin/manage-services/add"><button type="button" class="btn btn-success ml-2"><i
                                class="fas fa-plus-circle mr-1" style="color:#ffffff;"></i>Add Services</button></a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Service Name</th>
                                    <th>Image Service</th>
                                    <th>Created At</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Service Name</th>
                                    <th>Image Service</th>
                                    <th>Created At</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                            <tbody>
                                {{#each this.services}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td width="15%">{{services_name}}</td>
                                    <td>
                                        <br><br>
                                        <img src="{{image_service}}" style="width:450px">
                                        <hr>
                                        <div>
                                            <p><strong> Image Path</strong></p>
                                            <p>{{image_service}}</p>
                                        </div>
                                    </td>
                                    <td width="5%">{{moment created_at format="YYYY/MM/DD hh:mm:ss"}}</td>
                                    <td width="10%">
                                        <a href="/admin/manage-services/edit?id={{id}}"><button type="button"
                                                class="btn btn-primary ml-2"><i class="fas fa-edit mr-1"
                                                    style="color:#ffffff;"></i>Edit</button></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>